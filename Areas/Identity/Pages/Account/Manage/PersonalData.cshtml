@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <p>Your account contains personal data that you have given us. This page allows you to download
                    or
                    delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be
                        recovered.</strong>
                </p>
            </div>
            <div class="card-footer">
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="btn btn-primary float-start me-3" type="submit">Download</button>
                </form>
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
