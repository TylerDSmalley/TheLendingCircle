@page
@section Styles {
<link rel="stylesheet" href="~/css/animated.css" />
}
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<aside class="profile-card p-3">
    <header>
        <h1>Register</h1>
    </header>

    <div class="profile-bio">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
            class="w-100 row g-4 needs-validation" novalidate>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="First Name" aria-required="true" />
                <label asp-for="Input.FirstName" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="Last Name" aria-required="true" />
                <label asp-for="Input.LastName" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="col-4 form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                    aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating">
                <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" />
                <label asp-for="Input.Address" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Input.City" class="form-control" autocomplete="address" aria-required="true" />
                <label asp-for="Input.City" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="col-md-2 form-floating">
                <select asp-for="Input.Province" class="form-select">
                    <option selected>Choose...</option>
                    <option value="NL">NL</option>
                    <option value="PE">PE</option>
                    <option value="NS">NS</option>
                    <option value="NB">NB</option>
                    <option value="QC">QC</option>
                    <option value="ON">ON</option>
                    <option value="MB">MB</option>
                    <option value="SK">SK</option>
                    <option value="AB">AB</option>
                    <option value="BC">BC</option>
                    <option value="YT">YT</option>
                    <option value="NT">NT</option>
                    <option value="NU">NU</option>
                </select>
                <label asp-for="Input.Province" class="form-label fst-italic ms-1"></label>
            </div>
            <div class="col-md-4 form-floating">
                <input asp-for="Input.PostalCode" class="form-control" autocomplete="address" aria-required="true" />
                <label asp-for="Input.PostalCode" class="form-label fst-italic ms-1"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input asp-for="Input.UserPhotoPath" class="form-control" autocomplete="Placeholder"
                    aria-required="true" hidden="true" value="https://lendingcircle.s3.amazonaws.com/default-profile-pic.png" />
                <span asp-validation-for="Input.UserPhotoPath" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
        </form>
    </div>


