@page
@model TheLendingCircle.Pages_Admin_User.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].AvgRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].UserPhotoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser[0].TwoFactorEnabled)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ApplicationUser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhotoPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TwoFactorEnabled)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
