@page "{id}"
@section Styles {
<link rel="stylesheet" href="~/css/MyCircle.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
@model TheLendingCircle.Pages.ProfileModel
@{
    ViewData["Title"] = "Public Profile";
}
<div class="container">
    <div id="content" class="content p-0">
        <div class="profile-header">
            <div class="profile-header-cover"></div>
            <div class="profile-header-content">
                <div class="">
                    <img src="@Model.curUser.UserPhotoPath" class="mb-4 rounded-circle cover float-start me-3" alt="" />
                </div>

                <div class="ms-3">
                    <h4 class="mb-1">@Model.curUser.FirstName @Model.curUser.LastName</h4>
                    <h6 class="mb-1">@Model.curUser.PostalCode</h6>
                    <p class="mb-2">@User.Identity?.Name</p>
                </div>
            </div>
        </div>

            <div class="container d-flex flex-column justify-content-evenly w-75">
            <div class="d-flex flex-row align-items-center mb-0 mt-2">
                <h2 class="mb-0">My Overall Rating</h2>
                @if(Model.curUser.AvgRating > 0){
                     <h5 class="ms-3 mb-0">
                    @Model.curUser.AvgRating / 5
                     </h5>
                }else{
                    <h5 class="ms-3 mb-0">
                    No Rating Yet
                     </h5>
                }
               
            </div>
            <hr/>

            @foreach (var review in Model.userReviews)
            {
                <div class="Container d-flex flex-row justify-content-center my-4">
                    <div class="card w-50">
                        <div class="card-header">
                            Review 
                        </div>
                        <div class="card-body p-2">
                            <ul class="profile-info-list p-2">
                                <li class="title">Review Details</li>
                                <li>
                                    <div class="field">Review:</div>
                                    <div class="value">@review.ReviewBody</div>
                                </li>
                                <li>
                                    <div class="field">Rating given:</div>
                                    @{
                                        switch(@review.Rating)
                                        {
                                        case 0:
                                            <text>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </text>
                                        break;
                                        case 1:
                                            <text>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </text>
                                        break;
                                        case 2:
                                            <text>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </text>
                                        break;
                                        case 3:
                                            <text>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </text>
                                        break;
                                        case 4:
                                            <text>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star"></span>
                                            </text>
                                        break;  
                                        case 5:
                                            <text>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                            </text>
                                        break;
                                        default:
                                            <text>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </text>
                                        break;                   
                                    }
                                }
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer text-muted">
                            Date Reviewed: @review.CreationTime.ToShortDateString()
                        </div>
                    </div>
                </div>
                <hr />
            }
        </div>
    </div>
</div>    