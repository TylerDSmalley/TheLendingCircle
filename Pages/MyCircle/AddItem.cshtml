@page
@model TheLendingCircle.Pages.MyCircle.AddItemModel
@{
    ViewData["Title"] = "Add Item";
}

<h1>Add</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Description" class="control-label"></label>
                <textarea asp-for="Input.Description" height = "50px" class="form-control"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Condition" class="control-label"></label>
                <input asp-for="Input.Condition" class="form-control" />
                <span asp-validation-for="Input.Condition" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.ItemPhotoPath" class="control-label"></label>
                <input asp-for="Input.ItemPhotoPath" class="form-control" value="This will be a file picker" />
                <span asp-validation-for="Input.ItemPhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label asp-for="Input.Available" class="form-check-label">
                    <input class="form-check-input" asp-for="Input.Available" /> Available
                </label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
