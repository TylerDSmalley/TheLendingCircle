@page
@using Microsoft.AspNetCore.Identity
@using TheLendingCircle.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@section Styles {
<link rel="stylesheet" href="~/css/MyCircle.css" />
}
@model TheLendingCircle.Pages.MyCircle.MyItems.MyItemsModel
@{
    ViewData["Title"] = "My Items";
}

<div class="container">
    <div id="content" class="content p-0">
        <div class="profile-header">
            <div class="profile-header-cover"></div>
            <div class="profile-header-content">
                <div class="profile-header-img rounded-circle mb-4">
                    <img src="http://bootdey.com/img/Content/avatar/avatar1.png" class="mb-4 rounded-circle" alt="" />
                </div>

                <div class="profile-header-info">
                    <h4 class="m-t-sm">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h4>
                    <p class="m-b-sm">@User.Identity?.Name</p>
                    <a class="btn btn-xs btn-primary mb-2" asp-area="Identity" asp-page="/Account/Manage/Index"
                        title="Manage">Edit Profile</a>
                </div>
            </div>

            <ul class="profile-header-tab nav nav-tabs">
                <li class="nav-item mt-1"><a href="./MyItems" class="nav-link active show" data-toggle="tab">MY
                        ITEMS</a></li>
                <li class="nav-item mt-1"><a href="./ClosedCircles" class="nav-link" data-toggle="tab">CLOSED CIRCLES</a></li>
                <li class="nav-item mt-1"><a href="./OpenCircles" class="nav-link" data-toggle="tab">OPEN CIRCLES</a></li>
                <li class="nav-item mt-1"><a href="./CircleRequests" class="nav-link" data-toggle="tab">CIRCLE REQUESTS</a></li>
                <li class="nav-item mt-1"><a href="./MyReviews" class="nav-link" data-toggle="tab">MY REVIEWS</a></li>
            </ul>
        </div>

        <div class="container d-flex flex-column justify-content-evenly w-75">
            <div class="d-flex flex-row align-items-center mb-0 mt-2">
                <h2 class="mb-0">My Items in Circulation</h2>
            <p class="ms-3 mb-0">
                <a class="btn btn-xs btn-primary my-2" asp-area="" asp-page="./AddItem">Add Item</a>
            </p>
            </div>
            <hr/>

            @foreach (var item in Model.UserItems)
            {
                <div class="Container d-flex flex-column justify-content-evenly w-75">
                    <div class="row mx-4 my-2">
                        <div class="col col-md-7 mt-4">
                            <div class=""><b>My Item</b></div>
                            @* //Put image filepath here *@
                            <img src="https://tonsmb.org/wp-content/uploads/2014/03/default-placeholder.png" class="img-fluid mb-2" alt="" />
                            <a class="btn btn-primary" asp-page="./ItemPhotoUpload" asp-route-id="@item.Id">Upload new image</a>
                        </div>
                        <div class="col-md-5 hidden-xs hidden-sm">
                            <ul class="profile-info-list">
                                <li class="title">ITEM INFORMATION</li>
                                <li>
                                    <div class="field">Id:</div>
                                    <div class="value">@item.Id</div>
                                </li>
                                <li>
                                    <div class="field">Title:</div>
                                    <div class="value">@item.Title</div>
                                </li>
                                <li>
                                    <div class="field">Description:</div>
                                    <div class="value">@item.Description</div>
                                </li>
                                <li>
                                    <div class="field">Condition:</div>
                                    <div class="value">@item.Condition</div>
                                </li>
                                <li>
                                    <div class="field">Available:</div>
                                    <div class="value">@item.Available</div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr/>
            }
        </div>
    </div>
</div>
